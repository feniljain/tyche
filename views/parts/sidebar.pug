section#sidebar
    // Intro
    section#intro
        a.logo(href='#')
            img(src='/images/logo.png', alt='')
        header
            h2
                a(href="/") Moleculer
            p
                | Blog example site with 
                a(href='http://moleculer.services') Moleculer
    // Posts List
    section
        h2 Popular
        ul.posts
            each post in bestOfPosts
                li
                    article
                        header
                            h3
                                a(href='/post/' + encodeObjectID(post._id) + '/' + slugify(post.title))= post.title
                            time.published= moment(post.createdAt).format('LLL')
                        a.image(href='/post/' + encodeObjectID(post._id) + '/' + slugify(post.title))
                            img(src="/images/covers/" + post.coverPhoto, alt='')
